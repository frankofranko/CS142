<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<div><a href="/users/new">Registration</a></div>
<%= form_tag("post_login", :method => "post") do %> 

<div><%= label_tag(:user_name, "User Name:") %> <%= text_field_tag(:user_name) %></div>
<div><%= label_tag(:password, "Password:") %><%= text_field_tag(:password) %></div>

<%= submit_tag("Submit") %>

<%end%>